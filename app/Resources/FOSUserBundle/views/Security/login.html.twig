{% extends "FOSUserBundle::layout.html.twig" %}
{% block current_breadcrumb %}
    <li class="active">Login</li>
{% endblock %}
{% block fos_user_content %}
<div class="page-header">
    <h1>{% block title %}Login{% endblock %}</h1>
</div>
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" />
    </div>

    <div class="checkbox">
        <label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
        </label>
    </div>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-default btn-large" />
    <br />
    <br />
    <div class="text-left">
        <a href="{{ path('fos_user_resetting_request') }}">{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</a> | 
        <a href="{{ path('fos_user_registration_register') }}">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</a>
    </div>
</form>
{% endblock fos_user_content %}