{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{% block current_breadcrumb %}Movie list{% endblock %}</h1>
    </div>

    <table class="table table-striped table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Directed_by</th>
                <th>Music_by</th>
                <th>Language</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('movie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.directedby }}</td>
                <td>{{ entity.musicby }}</td>
                <td>{{ entity.language }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('movie_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('movie_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('movie_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
