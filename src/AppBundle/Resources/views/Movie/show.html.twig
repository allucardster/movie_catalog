{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{% block current_breadcrumb %}Movie{% endblock %}</h1>
    </div>

    <table class="table table-striped table-bordered record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Directed_by</th>
                <td>{{ entity.directedby }}</td>
            </tr>
            <tr>
                <th>Music_by</th>
                <td>{{ entity.musicby }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ entity.language }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('movie') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('movie_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
